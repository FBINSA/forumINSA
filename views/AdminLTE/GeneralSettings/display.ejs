<section class="content-header">
    <h1><i class="fa fa-cog"></i> Paramètres généraux</h1>
    <ol class="breadcrumb">
        <li><a href="<%= sails.getUrlFor('AdminController.home') %>"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Paramètres généraux du site</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-lg-6">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title"> Configuration pour l'année <%= year %> </h3>
                </div>
                <form role="form" class="form-horizontal" method="POST" action="<%= sails.getUrlFor('Admin/SettingsController.updateYearSettings') %>">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="name" class="col-sm-8 control-label">Prix pour un repas supplémentaire</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <input type="number" class="form-control" name="mealPrice" value="<%= yearSettings.mealPrice %>" required/>
                                    <span class="input-group-addon">€</span>
                                </div>
                            </div>
                        </div>
                        <h4 style="background-color:#f7f7f7; font-size: 18px; text-align: center; padding: 7px 10px; margin-top: 0;">
                            Pour les entreprises classiques
                        </h4>
                        <div class="form-group">
                            <label for="description" class="col-sm-8 control-label">Prix Forum</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <input type="number" class="form-control" name="forumPrice" value="<%= yearSettings.forumPrice %>" required>
                                    <span class="input-group-addon">€</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description" class="col-sm-8 control-label">Prix Forum + SJD</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <input type="number" class="form-control" name="sjdPrice" value="<%= yearSettings.sjdPrice %>" required>
                                    <span class="input-group-addon">€</span>
                                </div>
                            </div>
                        </div>
                        <h4 style="background-color:#f7f7f7; font-size: 18px; text-align: center; padding: 7px 10px; margin-top: 0;">
                            Pour les Start-up/PME
                        </h4>
                        <div class="form-group">
                            <label for="description" class="col-sm-8 control-label">Prix Forum</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <input type="number" class="form-control" name="forumPricePME" value="<%= yearSettings.forumPricePME %>" required>
                                    <span class="input-group-addon">€</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description" class="col-sm-8 control-label">Prix Forum + SJD</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <input type="number" class="form-control" name="sjdPricePME" value="<%= yearSettings.sjdPricePME %>" required>
                                    <span class="input-group-addon">€</span>
                                </div>
                            </div>
                        </div>
                        <h4 style="background-color:#f7f7f7; font-size: 18px; text-align: center; padding: 7px 10px; margin-top: 0;">
                            Pour les organismes de recherche
                        </h4>
                        <div class="form-group">
                            <label for="description" class="col-sm-8 control-label">Prix Forum</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <input type="number" class="form-control" name="forumPriceResearch" value="<%= yearSettings.forumPriceResearch %>" required>
                                    <span class="input-group-addon">€</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description" class="col-sm-8 control-label">Prix Forum + SJD</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <input type="number" class="form-control" name="sjdPriceResearch" value="<%= yearSettings.sjdPriceResearch %>" required>
                                    <span class="input-group-addon">€</span>
                                </div>
                            </div>
                        </div>
                        <h4 style="background-color:#f7f7f7; font-size: 18px; text-align: center; padding: 7px 10px; margin-top: 0;">
                            Pour les entreprises de la fondation INSA Toulouse
                        </h4>
                        <div class="form-group">
                            <label for="description" class="col-sm-8 control-label">Prix Forum</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <input type="number" class="form-control" name="forumPriceFoundation" value="<%= yearSettings.forumPriceFoundation %>" required>
                                    <span class="input-group-addon">€</span>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="description" class="col-sm-8 control-label">Prix Forum + SJD</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <input type="number" class="form-control" name="sjdPriceFoundation" value="<%= yearSettings.sjdPriceFoundation %>" required>
                                    <span class="input-group-addon">€</span>
                                </div>
                            </div>
                        </div>
                        <h4 style="background-color:#f7f7f7; font-size: 18px; text-align: center; padding: 7px 10px; margin-top: 0;">
                            Offre spéciale (VINCI)
                        </h4>
                        <div class="form-group">
                            <label for="description" class="col-sm-8 control-label">Prix Forum XXL</label>
                            <div class="col-sm-4">
                                <div class="input-group">
                                    <input type="number" class="form-control" name="offerPrice" value="<%= yearSettings.offerPrice %>" required>
                                    <span class="input-group-addon">€</span>
                                </div></div>
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="reset" class="btn btn-success pull-left">Réinitialiser</button>
                        <button type="submit" class="btn btn-info pull-right">Sauvegarder</button>
                    </div>
                </form>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Date limite d'inscription</h3>
                </div>
                <form role="form" method="POST" action="/Admin/setInscriptionDeadline">
                    <div class="box-body">
                        <div class="form-group">
                            <p><b><%= generalSettings.inscriptionDeadline.getDate() %>/
                               <%= generalSettings.inscriptionDeadline.getMonth() + 1 %>/
                               <%= generalSettings.inscriptionDeadline.getFullYear() %></b>
                               <br />
                               Changer la deadline pour :
                            </p>
                            <div class="input-group date">
                                <div class="input-group-addon">
                                    <i class="fa fa-calendar"></i>
                                </div>
                                <input type="date" class="form-control pull-right" name="inscriptionDeadline" Zvalue="<%= generalSettings.inscriptionDeadline%>">
                            </div>
                            <!-- /.input group -->
                        </div>
                    </div>

                    <div class="box-footer">
                        <button type="submit" class="btn btn-info pull-right">Sauvegarder</button>
                    </div>
                </form>
            </div>
            <div class="box box-success">
                <div class="box-header with-border">
                    <h3 class="box-title">Ouverture des inscriptions</h3>
                </div>
                <form role="form" method="POST" action="/Admin/setInscriptionOpen"">
                    <div class="box-body">
                        <div class="form-group">
                            <p>Actuellement, les inscriptions sont <b><%= generalSettings.areInscriptionsOpened? 'ouvertes' : 'fermées' %></b>.<br />
                               Définir les inscriptions comme :
                            </p>
                            <div class="radio">
                                <label><input type="radio" value="1" name="inscriptions" <%= generalSettings.areInscriptionsOpened ? 'checked' : '' %>/>ouvertes</label><br>
                                <label><input type="radio" value="0" name="inscriptions" <%= generalSettings.areInscriptionsOpened ? '' : 'checked' %>/>fermées</label>
                            </div>
                            <!-- /.input group -->
                        </div>
                    </div>
                    <div class="box-footer">
                        <button type="submit" class="btn btn-info pull-right">Sauvegarder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>

