<section class="content-header">
    <h1>Création d'entreprise</h1>
    <ol class="breadcrumb">
        <li><a href="<%= sails.getUrlFor('AdminController.home') %>"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="<%= sails.getUrlFor('Admin/CompanyController.listing') %>">Entreprises inscrites</a></li>
        <li><a href="#">Ajout d'entreprises</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Nouvelle entreprise</h3>
                </div>
                <form role="form" class="form-horizontal" method="POST" action="<%= sails.getUrlFor('Admin/CompanyController.create') %>">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="siret" class="col-sm-2 control-label">Numéro de siret<sup>*</sup></label>
                            <div class="col-sm-10">
                                <input type="number"  maxlength="17" name="siret" class="form-control" placeholder="Siret number" required pattern="[0-9]{3}[ \.\-]?[0-9]{3}[ \.\-]?[0-9]{3}[ \.\-]?[0-9]{5}"<% if(company.siret) { %> value="<%= company.siret %>" <% } %> >
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="companyName" class="col-sm-2 control-label">Nom d'entreprise<sup>*</sup></label>
                            <div class="col-sm-10">
                                <input type="text" maxlength="50" name="companyName" class="form-control" placeholder="Company name" required <% if(company.companyName) { %> value="<%= company.companyName%>" <% } %> >
                            </div>
                        </div>
                    </div>

                    <div class="box-footer">
                        <button type="reset" class="btn btn-success pull-left">Réinitialiser</button>
                        <button type="submit" class="btn btn-info pull-right">Sauvegarder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
