<section class="content-header">
    <h1><i class="fa fa-code"></i> Paramètres de contenu</h1>
    <ol class="breadcrumb">
        <li><a href="<%= sails.getUrlFor('AdminController.home') %>"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="<%= sails.getUrlFor('Admin/WorkshopController.listing') %>">Ateliers</a></li>
        <li><a href="#">Création d'ateliers</a></li>
    </ol>
</section>

<section class="content">
    <div class="row">
        <div class="col-lg-12">
            <div class="box box-primary">
                <div class="box-header with-border">
                    <h3 class="box-title">Nouvel atelier</h3>
                </div>
                <form role="form" class="form-horizontal" method="POST" action="<%= sails.getUrlFor('Admin/WorkshopController.create') %>">
                    <div class="box-body">
                        <div class="form-group">
                            <label for="abbreviation" class="col-sm-2 control-label">Abbréviation</label>
                            <div class="col-sm-10">
                                <input type="text" name="abbreviation" class="form-control" placeholder="ex: CV" <% if(workshop.abbreviation) { %> value="<%= workshop.abbreviation %>" <% } %>>
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="name" class="col-sm-2 control-label">Nom entier</label>
                            <div class="col-sm-10">
                                <input type="text" name="name" class="form-control" placeholder="ex: Comment faire un bon CV ?" <% if(workshop.name) { %> value="<%= workshop.name %>" <% } %> >
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="organizer" class="col-sm-2 control-label">Organisateur</label>
                            <div class="col-sm-10">
                                <input type="text" name="organizer" class="form-control" placeholder="IAT" <% if(workshop.organizer) { %> value="<%= workshop.organizer%>" <% } %> >
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="places" class="col-sm-2 control-label">Nombre de places max</label>
                            <div class="col-sm-10">
                                <input type="number" name="places" class="form-control" placeholder="20" <% if(workshop.places) { %> value="<%= workshop.places%>" <% } %> >
                        </div>
                    </div>

                    <div class="box-footer">
                        <button type="reset" class="btn btn-success pull-left">Réinitialiser</button>
                        <button type="submit" class="btn btn-info pull-right">Sauvegarder</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>
