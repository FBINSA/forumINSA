<body class="custom-body">
  <div class="pure-g">
    <div class="pure-u-3-5 center-part" style="margin: auto">
      <header>
        <a href="/" ><img src='/images/Logo_FIE_blanc.png' width="400" alt="logo"/></a>
        <div id="networks">
          <a href="https://www.facebook.com/ForumInsaEntreprises" class="icon-button facebook" target="_blank"><i class="fa fa-facebook icon-facebook"></i><span></span></a>
          <a href="https://twitter.com/INSAToulouse" class="icon-button twitter" target="_blank"><i class="fa fa-twitter icon-twitter"></i><span></span></a>
          <a href="https://fr.linkedin.com/in/forum-insa-entreprises-49377699" class="icon-button linkedin" target="_blank"><i class="fa fa-linkedin icon-linkedin"></i><span></span></a>
        </div>
        <div id="connect-infos">
        <% if(req.session.authenticated){ %>
            <p>Connect√© en tant que:<br/>
          <% if (req.session.sessionType == "company") {%>
              <%=req.session.companyName%>
        <%  } else if (req.session.sessionType == "student") { %>
              <%=req.session.firstName%>
        <%  } else { %>
              Type inconnu
        <%  }
          } else { %>
            <p>CONNEXION: </p>
            <button id="connectStudent"  type="button" class="btn red-button student"><i class="fa fa-graduation-cap"></i> Etudiant</button>
            <button id="connectCompany"  type="button" class="btn red-button company"><i class="fa fa-briefcase"></i> Entreprise</button>
        <% } %>
      </div>

      </header>

      <!-- Content inserted here -->
      <%- include nav %>
      <div class="content-part">
        <div id="subBody"></div>
        <%- body %>
      </div>
    </div>
  </div>

  <footer>
    <div class="pure-g">
      <div class="pure-u-3-5 footer">
        <%- include footer %>
      </div>
    </div>
  </footer>
<script src="/js/unslider-min.js"></script>
