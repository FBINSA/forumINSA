<style>
    td h3 {
        font-size: 1em;
        font-weight: bold;
        margin: 5px;
        margin-right: 10px;
    }
</style>

<%
if (typeof bMailAddress == 'undefined')
  bMailAddress = '';

if (typeof complementaryInformation == 'undefined')
  complementaryInformation = '';
%>


<h1>Profil Entreprise</h1>
<p>Je suis le formulaire de modification de l'entreprise !</p>

<h3>Contact Forum</h3>
<table style="margin: auto;">
  <form id="firstName" method="post" action="/Company/setAUserInfo">
  <tr>
    <td><h3>Prénom</h3></td>
    <td><%=firstName%></td>
    <td>
        <input type="hidden" name="data" value="a"/>
        <input type="text" name="firstName" value="<%=firstName%>"/>
    </td>
  </tr>
  <!-- ------------------------------------------- -->
  <tr>
    <td><h3>Nom</h3></td>
    <td><%=lastName%></td>
   <td>
        <input type="text" name="lastName" value="<%=lastName%>"/>
    </td>
  </tr>
  <!-- ------------------------------------------- -->
  <tr>
    <td><h3>Fonction</h3></td>
    <td><%=position%></td>
    <td>
        <input type="text" name="position" value="<%=position%>"/>
    </td>
  </tr>
  <!-- ------------------------------------------- -->
  <tr>
    <td><h3>Téléphone</h3></td>
    <td><%=phoneNumber%></td>
      <td>
        <input type="text" name="phoneNumber" value="<%=phoneNumber%>"/>
    </td>
  </tr>
  <!-- ------------------------------------------- -->
  <tr>
    <td><h3>Adresse mail</h3></td>
    <td><%=mailAddress%></td>
    <td>
        <input type="text" name="mailAddress" value="<%=mailAddress%>"/>
        <input type="submit" class="form-button" value="Sauvegarder"/>
    </td>
  </tr>
  </form>
</table>

<h3><h3>Contact Facturation</h3></h3>
<table style="margin: auto;">
  <form class="pure-form" id="bFirstName" method="post" action="/Company/setAUserInfo">
    <input class="pure-input" type="hidden" name="data" value="f"/>
  <tr>
    <td><h3>Prénom</h3></td>
    <td><%=bFirstName%></td>
    <td>
        <input class="pure-input" type="text" name="bFirstName" value="<%=bFirstName%>"/>
    </td>
    <td class="pure-input-1-3">f</td>
  </tr>
  <!-- ------------------------------------------- -->
  <tr>
    <td><h3>Nom</h3></td>
    <td><%=bLastName%></td>
    <td>
        <input class="pure-input" type="text" name="bLastName" value="<%=bLastName%>"/>
    </td>
    <td style="display: block;"></td>
  </tr>
  <!-- ------------------------------------------- -->
  <tr>
    <td><h3>Fonction</h3></td>
    <td><%=bPosition%></td>
    <td>
        <input class="pure-input" type="text" name="bPosition" value="<%=bPosition%>"/>
    </td>
    <td style="display: block;"></td>
  </tr>
  <!-- ------------------------------------------- -->
  <tr>
    <td><h3>Téléphone</h3></td>
    <td><%=bPhoneNumber%></td>
    <td>
        <input class="pure-input" type="text" name="bPhoneNumber" value="<%=bPhoneNumber%>"/>
    </td>
    <td style="display: block;"></td>
  </tr>
  <!-- ------------------------------------------- -->
  <tr>
    <td><h3>Adresse mail</h3></td>
    <td><%=bMailAddress%></td>
    <td>
        <input class="pure-input" type="text" name="bMailAddress" value="<%=bMailAddress%>"/>
        <input class="pure-input-1-3" type="submit" class="form-button" value="Sauvegarder"/>
      </form>
    </td>
    <td style="display: block;"></td>
  </tr>
</table>

<h3>Profil entreprise</h3>
<table style="margin: auto;">
  <tr>
    <td><h3>Siret</h3></td>
    <td><%=siret%></td>
    <td>
      <!-- <form id="siret" method="post" action="/Company/setAUserInfo">
        <input type="hidden" name="data" value="k"/>
        <input type="text" name="siret" value="<%=siret%>"/>
        <input type="submit" value="Sauvegarder"/>
      </form> -->
    </td>
  </tr>
  <tr>
    <td><h3>Nom</h3></td>
    <td><%=companyName%></td>
    <td>
      <form id="companyName" method="post" action="/Company/setAUserInfo">
        <input type="hidden" name="data" value="l"/>
        <input type="text" name="companyName" value="<%=companyName%>"/>
        <input type="submit" class="form-button" value="Sauvegarder"/>
      </form>
    </td>
  </tr>
  <tr>
    <td><h3>Group</h3></td>
    <td><%=companyGroup%></td>
    <td>
      <form id="companyGroup" method="post" action="/Company/setAUserInfo">
        <input type="hidden" name="data" value="m"/>
        <input type="text" name="companyGroup" value="<%=companyGroup%>"/>
        <input type="submit" class="form-button" value="Sauvegarder"/>
      </form>
    </td>
  </tr>
  <tr>
    <td><h3>Logo</h3></td>
    <% if (typeof logoPath != 'undefined' && logoPath!=''){ %>
    <td><img src="/images/logos/<%=logoPath%>" style="width: 40px; height: auto" /></td>
    <% } else { %>
    <td></td>
    <% } %>
    <td>
      <form id="logoUpload" method="post" action="/file/uploadLogo" enctype="multipart/form-data">
        <input type="file" name="logo"/>
        <input type="submit" class="form-button" value="Enregister">
      </form>
    </td>
  </tr>
  <tr>
    <td><h3>Description</h3></td>
    <td><%=description%></td>
    <td>
      <form id="description" method="post" action="/Company/setAUserInfo">
        <input type="hidden" name="data" value="n"/>
        <textarea type="text" name="description"><%=description%></textarea>
        <input type="submit" class="form-button" value="Sauvegarder"/>
      </form>
    </td>
  </tr>
  <tr>
    <td><h3>Site internet</h3></td>
    <td><a href="<%=websiteUrl%>" target="_blank"><%=websiteUrl%></a></td>
    <td>
      <form id="websiteUrl" method="post" action="/Company/setAUserInfo">
        <input type="hidden" name="data" value="o"/>
        <input type="text" name="websiteUrl" value="<%=websiteUrl%>"/>
        <input type="submit" class="form-button" value="Sauvegarder"/>
      </form>
    </td>
  </tr>
  <tr>
    <td><h3>Site de recrutement</h3></td>
    <td><a href="<%=careerUrl%>" target="_blank"><%=careerUrl%></a></td>
    <td>
      <form class="pure-form" id="careerUrl" method="post" action="/Company/setAUserInfo">
        <input type="hidden" name="data" value="p"/>
        <input type="text" name="careerUrl" value="<%=careerUrl%>"/>
        <input type="submit"class="form-button" value="Sauvegarder"/>
      </form>
    </td>
  </tr>
  <tr>
    <td><h3>Adresse postale</h3></td>
    <td>
      <%=road%><br />
      <% if (typeof complementaryInformation != 'undefined' && complementaryInformation != "") { %>
        <%=complementaryInformation%><br />
      <% } %>
      <%=postCode%> <%=city%><br />
      <%=country%>
    </td>
    <td>
      <form id="postAddress" method="post" action="/Company/setAUserInfo">
        <input type="hidden" name="data" value="q"/>
        <input type="text" name="road" value="<%=road%>" placeholder="N° et rue"/><br />
        <input type="text" name="complementaryInformation" placeholder="Complément"/><br>
        <input type="text" name="postCode" value="<%=postCode%>" placeholder="Code postal"/><br />
        <input type="text" name="city" value="<%=city%>" placeholder="Ville"/><br />
        <input type="text" name="country" value="<%=country%>" placeholder="Pays"/><br />
        <button class="form-button" type="submit" >Sauvegarder</button>
      </form>
    </td>
  </tr>
</table>
