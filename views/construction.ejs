                .removeClass('left-col-landscape')
                .removeClass('col-6')
            $('#imgbox')
                .addClass('imgbox-portrait')
                .removeClass('imgbox-landscape')
            $('#title')
                .addClass('title-portrait')
                .removeClass('title-landscape')
            $('#text-middle')
                .addClass('text-middle-portrait')
                .removeClass('text-middle-landscape')
            $('#text-bottom')
                .addClass('text-bottom-portrait')
                .removeClass('text-bottom-landscape')
        } else {
            $('#right-col')
                .addClass('right-col-landscape')
                .removeClass('right-col-portrait')
                .addClass('col-6')
            $('#mid-col')
                .addClass('mid-col-landscape')
                .removeClass('mid-col-portrait')
            $('#left-col')
                .addClass('left-col-landscape')
                .removeClass('left-col-portrait')
                .addClass('col-6')
            $('#imgbox')
                .addClass('imgbox-landscape')
                .removeClass('imgbox-portrait')
            $('#title')
                .addClass('title-landscape')
                .removeClass('title-portrait')
            $('#text-middle')
                .addClass('text-middle-landscape')
                .removeClass('text-middle-portrait')
            $('#text-bottom')
                .addClass('text-bottom-landscape')
                .removeClass('text-bottom-portrait')
        }
    }
    $(window).on('resize', function() {responsiveFunc()})
