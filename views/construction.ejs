<script type="text/javascript">
    let responsiveFunc = function () {
        if ($(window).height() >= $(window).width()) {
            $('#right-col')
                .addClass('right-col-portrait')
                .removeClass('right-col-landscape')
                .removeClass('col-6')
            $('#mid-col')
                .addClass('mid-col-portrait')
                .removeClass('mid-col-landscape')
            $('#left-col')
