<h1>Partie admin</h1>

<% if (req.session.isAdmin != true) { %>

<form method="POST" action="/Admin/Login">
  <input type="password" name="password"/>
  <input type="submit" value="Se connecter"/>
</form>

<% } else {
  var index = 0
  %>


<h2>Personnel entreprise inscrit à l'événement</h2>

<table style="border-spacing: 2px; border-collapse: separate">
  <tr>
    <th>N°</th> <th>Entreprise</th> <th>Nom et prénom</th>
  </tr>
  <% companies.forEach(function(company) { %>
    <% if (typeof company.vigipirate != 'undefined') { %>
      <% company.vigipirate.forEach((person) => {
        index++
        %>
        <tr>
          <td><%= index%></td>
          <td><%= company.companyName%></td>
          <td><%= person%></td>
        </tr>
      <% }) %>
    <% } %>
  <% }); %>
</table>

<% } %>
