

<!--Connection block-->

<h1>Connexion</h1>

<!--Errors to be precised-->
<%if (typeof error !='undefined'){%>
<p style="color:#ff2b23;"><%= error %></p>
<%}%>

<% if (!req.session.authenticated) { %>
<!-- COMPANY-->
<h2>Entreprises</h2>

<%if (req.session.studentConnectionTried == true) { %>
<p>Authentication failed. Is your login or password incorrect ?</p>
<% } %>

<form method="post" action="/Company/AuthCompany">
  <input type="email" placeholder="Email utilisateur" name="UserAuthEmail" required/>
  <input type="password" placeholder="Mot de passe" name="UserAuthPasswd" required/>
  <input type="hidden" name="NextUrl" value="<%if (typeof nexturl != 'undefined'){%><%=nexturl%><%}else{%>/<%}%>"/>
  <input type="submit"/>
</form>

<p><a href="/Company/ResetPassPage">Mot de passe oublié ?</a></p>
<br />
<br />

<!-- STUDENT -->
<h2>Etudiants INSA</h2>

<%if (req.session.studentConnectionTried == true) { %>
<p>Authentication failed. Is your login or password incorrect ?</p>
<% } %>

<form method="post" action="/Student/Login">
  <input type="text" name="login" placeholder="Login" required/>
  <input type="password" name="password" placeholder="Password" required/>
  <input type="submit" value="submit" />
</form>



<% } else { %>
<p>Vous êtes déjà connecté <%= req.session.firstName%>.</p>

<% }%>
